{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "src/bin/**/*.ts",
    "src/index.ts",
    "src/main.ts",
    "src/lib/**/*.ts",
    "src/scripts/smoke-local.ts",
    "src/commands/statement/**/*.ts",
    "src/commands/graph/**/*.ts",
    "src/commands/vocab/**/*.ts",
    "src/commands/project/**/*.ts"
  ]
}
